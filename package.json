{
    "name": "ai-virtual-try-on-monorepo",
    "private": true,
    "version": "1.0.0",
    "description": "AI Virtual Try-On application (Python backend + React frontend)",
    "type": "module",
    "workspaces": [
        "frontend"
    ],
    "scripts": {
        "dev": "npm run dev:py",
        "dev:py": "concurrently --names \"PY,FRONTEND\" --prefix-colors \"magenta,green\" \"npm run dev:backend-py\" \"npm run dev:frontend:py\"",
        "dev:backend-py": "cd backend_py && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 3001",
        "dev:frontend:py": "cd frontend && cross-env VITE_API_URL=http://localhost:3001 npm run dev",
        "build": "npm run build:frontend",
        "build:frontend": "cd frontend && npm run build",
        "install:all": "npm install",
        "test": "npm run test:frontend",
        "test:frontend": "cd frontend && npm test",
        "test:watch": "npm run test:watch:frontend",
        "test:watch:frontend": "cd frontend && npm run test:watch",
        "lint": "npm run lint:frontend",
        "lint:frontend": "cd frontend && npm run lint",
        "lint:fix": "npm run lint:fix:frontend",
        "lint:fix:frontend": "cd frontend && npm run lint:fix",
        "clean": "rimraf node_modules frontend/node_modules frontend/dist || true",
        "clean:install": "npm run clean && npm run install:all",
        "docker:build": "docker compose build",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:dev": "docker compose -f docker-compose.dev.yml up",
        "docker:dev:build": "docker compose -f docker-compose.dev.yml build",
        "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
        "docker:clean": "docker compose down -v --rmi all",
        "test:backend-py:smoke": "node scripts/test_py_backend.js",
        "ingest:realdata": "python backend_py/tools/ingest_csv_to_catalog.py",
        "dev:py:auto": "node scripts/run_backend_py.js"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "rimraf": "^5.0.10"
    },
    "keywords": [
        "ai",
        "virtual-try-on",
        "react",
        "fastapi",
        "monorepo"
    ],
    "author":  "",
    "license":  "ISC"
}
